{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@icons/*": ["./src/assets/icons/*"],
      "firebase/*": ["./node_modules/firebase/*"]
    },
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types/", "./src/types/"]
  }
}
